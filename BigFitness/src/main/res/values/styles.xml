<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="MyCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">

        <item name="android:button">@drawable/checkbox</item>

        <item name="android:paddingLeft">25.0dip</item>

        <item name="android:maxHeight">10.0dip</item>

    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- toolbar 搜索框样式 -->
    <style name="toolbar_edit">
        <item name="android:layout_width">@dimen/dimen_192dp</item>
        <item name="android:layout_height">@dimen/dimen_36dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">@dimen/dimen_4dp</item>
        <item name="android:layout_margin">@dimen/dimen_4dp</item>
        <item name="android:background">@drawable/shape_search</item>
        <item name="android:drawableStart">@mipmap/edit_search</item>
        <item name="android:drawablePadding">@dimen/dimen_4dp</item>
        <item name="android:maxLines">1</item>

        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/dimen_16sp</item>
    </style>

    <style name="title_textview">主页</style>

    <!-- 统一按钮 -->
    <style name="normal_button">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/dimen_20sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/shape_button</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--统一toolbar-->
    <style name="myToolbarNavigationButtonStyle" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">0dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>


    <style name="anim_view">
        <item name="@android:windowEnterAnimation">@anim/anim_in</item>
        <item name="@android:windowExitAnimation">@anim/anim_out</item>
    </style>

    <style name="top_anim_view">
        <item name="@android:windowEnterAnimation">@anim/top_anim_in</item>
        <item name="@android:windowExitAnimation">@anim/top_anim_out</item>
    </style>

    <style name="bottom_anim_view">
        <item name="@android:windowEnterAnimation">@anim/bottom_anim_in</item>
        <item name="@android:windowExitAnimation">@anim/bottom_anim_out</item>
    </style>

    <style name="center_anim_view">
        <item name="@android:windowEnterAnimation">@anim/center_anim_in</item>
        <item name="@android:windowExitAnimation">@anim/center_anim_out</item>
    </style>




    <style name="switchColor">
        <item name="android:textColor">#000000</item>
        <!--<item name="android:textSize">@dimen/dimen_14sp</item>-->
    </style>


    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">#548B54</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <!--<item name="colorControlNormal">@color/member_text_color</item>-->
        <item name="colorControlNormal">@color/green_btn</item>
        <item name="colorControlActivated">@color/green_btn</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:maxHeight">20dp</item>
        <item name="android:maxWidth">20dp</item>
        <item name="android:minWidth">20dp</item>
    </style>

    <!--右侧文字选择-->
    <style name="radiobutton_right_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_30dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:drawableRight">@drawable/member_evaluation_checkbox</item>

        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:background">@color/white</item>
    </style>
    <style name="transparentFrameWindowStyle" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item><!--除去title-->
        <item name="android:windowBackground">@color/transparent</item>
    </style>
    <!--接收到推送时候的显示-->
    <style name="DialogActivity" parent="@style/Theme.AppCompat.Dialog">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowFrame">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item><!--浮在其他Activity之上-->
        <item name="android:windowIsTranslucent">true</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item><!--背景透明-->
        <item name="android:backgroundDimAmount">0.5</item><!--透明度 0.0f到1.0f。1.0完全不透明，0.0f完全透明-->
    </style>
</resources>
