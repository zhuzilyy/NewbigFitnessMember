<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">





    <item android:state_focused="true"  android:color="@color/black">

        <shape xmlns:android="http://schemas.android.com/apk/res/android">

            <corners android:radius="40dp"/>
            <gradient


                android:startColor="#96ED25"
                android:endColor="#74FC6E"

                android:angle="0" />
        </shape>
    </item>
    <item android:color="@color/member_text_color">
        <shape>
            <!-- 角度 -->
            <corners android:radius="40dp"/>
            <!-- 填充色 -->
            <solid android:color="@color/member_view_bg_color"/>
            <!-- 描边 设置线宽及颜色 -->
            <stroke android:color="@color/member_text_color"
                android:width="2dp"/>

        </shape>
    </item>
</selector>