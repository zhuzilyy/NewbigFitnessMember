<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/member_bg_color"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="360px"
                android:background="@mipmap/img_details_my_card">


                <ImageView
                    android:id="@+id/btn_back"
                    android:layout_width="70px"
                    android:layout_height="70px"
                    android:layout_margin="20px"
                    android:alpha="0.5"
                    android:src="@mipmap/back_bg" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200px"
                    android:layout_weight="1"
                    android:background="@color/member_bg_color"
                    android:orientation="vertical"
                    android:weightSum="3">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="4px"
                        android:background="@color/member_view_bg_color"></LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="20px"
                        android:layout_marginRight="20px"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"

                            android:layout_weight="1"
                            android:gravity="center|left"

                            android:text="会员卡状态"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/text_status"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"

                            android:layout_weight="1"
                            android:gravity="center|right"

                            android:text="已认证"
                            android:textColor="@color/green_btn" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="20px"
                        android:layout_marginRight="20px"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"

                            android:layout_weight="1"
                            android:gravity="center|left"

                            android:text="合同编号"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/text_id_order"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"

                            android:layout_weight="1"
                            android:gravity="center|right"

                            android:text=""
                            android:textColor="@color/green_btn" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="20px"
                        android:layout_marginRight="20px"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center|left"
                            android:text="会员卡号"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/text_id_card"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center|right"
                            android:text=""
                            android:textColor="@color/green_btn" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="4px"
                        android:layout_marginLeft="20px"
                        android:background="@color/member_view_bg_color"></LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/member_bg_color"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"

                        android:layout_margin="20px"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center|left"
                            android:text="会员卡类型"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/text_type_card"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center|right"
                            android:text=""
                            android:textColor="@color/member_text_color" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                       android:layout_margin="20px"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"

                            android:layout_weight="1"
                            android:gravity="center|left"

                            android:text="消费总额"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/text_mone_pay"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"

                            android:layout_weight="1"
                            android:gravity="center|right"

                            android:text=""
                            android:textColor="@color/member_text_color" />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                       android:layout_margin="20px"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"

                            android:layout_weight="1"
                            android:gravity="center|left"

                            android:text="剩余可用值"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/text_number_remaining"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"

                            android:layout_weight="1"
                            android:gravity="center|right"

                            android:text=""
                            android:textColor="@color/member_text_color" />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                       android:layout_margin="20px"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"

                            android:layout_weight="1"
                            android:gravity="center|left"

                            android:text="会籍顾问"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/text_name_counselor"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"

                            android:layout_weight="1"
                            android:gravity="center|right"

                            android:text=""
                            android:textColor="@color/member_text_color" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                       android:layout_margin="20px"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"

                            android:layout_weight="1"
                            android:gravity="center|left"

                            android:text="开卡时间"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/text_openedtime_card"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"

                            android:layout_weight="1"
                            android:gravity="center|right"

                            android:text=""
                            android:textColor="@color/member_text_color" />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                       android:layout_margin="20px"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"

                            android:layout_weight="1"
                            android:gravity="center|left"

                            android:text="到期时间"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/text_time_end"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"

                            android:layout_weight="1"
                            android:gravity="center|right"

                            android:text=""
                            android:textColor="@color/member_text_color" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="20px"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center|left"
                            android:text="购买时间"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/text_time_buy"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center|right"
                            android:text=""
                            android:textColor="@color/member_text_color" />


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/member_bg_color"
                    android:orientation="vertical"
                    android:weightSum="4">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="4px"
                        android:layout_marginLeft="20px"
                        android:background="@color/member_view_bg_color"></LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="20px"
                        android:layout_marginRight="20px"
                        android:layout_weight="2.5"
                        android:orientation="horizontal">


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="4px"
                        android:background="@color/member_view_bg_color"></LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="160px"
                        android:layout_margin="20px"
                        android:gravity="right"
                        android:orientation="horizontal"
                        android:weightSum="4">


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/btn1"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/dimen_30dp"
                                android:layout_marginBottom="20px"

                                android:layout_weight="1"
                                android:background="@drawable/btn_type_shape"
                                android:gravity="center"
                                android:padding="10px"
                                android:text="升级"
                                android:textColor="@color/member_text_color" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/btn2"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/dimen_30dp"
                                android:layout_marginBottom="20px"

                                android:layout_weight="1"
                                android:background="@drawable/btn_type_shape"
                                android:gravity="center"
                                android:padding="10px"
                                android:text="冻结"
                                android:textColor="@color/member_text_color" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/btn3"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/dimen_30dp"
                                android:layout_marginBottom="20px"

                                android:layout_weight="1"
                                android:background="@drawable/btn_type_shape"
                                android:gravity="center"
                                android:padding="10px"
                                android:text="续费"
                                android:textColor="@color/member_text_color" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/btn4"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/dimen_30dp"
                                android:layout_marginBottom="20px"

                                android:layout_weight="1"
                                android:background="@drawable/btn_type_shape"
                                android:gravity="center"
                                android:padding="10px"
                                android:text="评价"
                                android:textColor="@color/member_text_color" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/btn5"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/dimen_30dp"
                                android:layout_marginBottom="20px"

                                android:layout_weight="1"
                                android:background="@drawable/btn_type_shape"
                                android:gravity="center"
                                android:padding="10px"
                                android:text="退款"
                                android:visibility="gone"
                                android:textColor="@color/member_text_color" />

                        </LinearLayout>


                    </LinearLayout>



                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>