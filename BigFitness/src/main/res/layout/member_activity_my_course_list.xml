<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/member_bg_color"
    android:focusable="true"
    android:focusableInTouchMode="true">

<include android:id="@+id/toolbar" layout="@layout/view_toolbar_main"/>
    <android.support.design.widget.TabLayout
        android:id="@+id/tab_main"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_alignParentStart="true"
       android:layout_below="@+id/toolbar"
        android:layout_marginLeft="160px"
        android:layout_marginRight="160px"
        android:background="@color/member_bg_color"
        android:fillViewport="true"
        app:tabBackground="@null"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/green_btn"
        app:tabIndicatorHeight="6px"
        app:tabMode="fixed"
        app:tabPaddingEnd="60px"
        app:tabPaddingStart="60px"

        app:tabSelectedTextColor="@color/green_btn"
        app:tabTextColor="@color/member_text_color" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tab_main"
        android:layout_weight="1" />

