<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    android:layout_marginBottom="@dimen/album_dp_10"
    android:layout_marginLeft="@dimen/album_dp_10"
    android:layout_marginRight="@dimen/album_dp_10"
    android:layout_weight="1"
    android:background="@color/member_view_bg_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/img_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/member_view_bg_color"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_alignParentTop="true"
                android:layout_weight="3"
                android:scaleType="fitXY"
                android:src="@mipmap/img_card_coach" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_below="@+id/img"
                android:layout_marginBottom="@dimen/dimen_5dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_20dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="大周/男 100岁"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/text_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_20dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:lines="1"
                    android:text="#器械增肌 #减脂塑形 #体"
                    android:textColor="@color/green_btn"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/img_star"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="18dp"
                    android:layout_weight="1"
                    android:padding="3dp"
                    android:scaleType="fitStart"
                    android:src="@mipmap/star_4_half" />

            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:id="@+id/img_check"
            android:layout_width="@dimen/dimen_20dp"
            android:visibility="gone"
            android:layout_height="@dimen/dimen_20dp"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:src="@drawable/check_box" />
    </RelativeLayout>

</android.support.v7.widget.CardView>
