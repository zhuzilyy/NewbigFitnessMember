<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_address_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.member.gufei.bigfitness.com.GuFei.Ui.AddressList.AddressDetails.AddressDetailsActivity">
<RelativeLayout
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true">
    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="10dp">

        <Button
            android:id="@+id/btn_add_reservation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="输入跟进信息"
            android:textAlignment="center" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/main_head_layout"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@color/white">

                <TextView
                    android:id="@+id/main_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="预约详情"
                    android:textAlignment="center"
                    android:textSize="17sp" />

                <ImageView
                    android:id="@+id/btn_back"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:padding="5dp"
                    android:src="@mipmap/lefttool" />

                <TextView

                    android:id="@+id/btn_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_8dp"
                    android:padding="5dp"
                    android:paddingRight="1px"
                    android:text="  "
                    android:textSize="@dimen/dimen_12dp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/lightblack"></LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <!--客户-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">


                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="5dp"
                        android:text="客  户"
                        android:textColor="#ff333333"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/text_user_name"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:textAlignment="textEnd"
                        android:layout_alignBaseline="@+id/user_name_text"
                        android:layout_alignBottom="@+id/user_name_text"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:text=""
                        android:textSize="14sp" />


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/bg_color"></LinearLayout>
                <!--预约类型-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="5dp"
                        android:text="预约类型"
                        android:textColor="#ff333333"

                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/appointment_type_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:background="@null"
                        android:enabled="false"
                        android:hint="请选择"
                        android:textAlignment="center"
                        android:textSize="14sp" />


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/bg_color"></LinearLayout>
                <!--预约开始时间-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/img_appointment_time_begin"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:scaleType="centerInside"
                        android:src="@mipmap/right"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="5dp"
                        android:text="预约开始时间"
                        android:textColor="#ff333333"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/text_appointment_time_begin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="5dp"
                        android:layout_toStartOf="@+id/img_appointment_time_begin"
                        android:background="@null"
                        android:enabled="false"
                        android:text="-"
                        android:textAlignment="center"
                        android:textSize="14sp" />


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/bg_color"></LinearLayout>
                <!--预约结束时间-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/img_appointment_time_end"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:scaleType="centerInside"
                        android:src="@mipmap/right"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="5dp"
                        android:text="预约结束时间"
                        android:textColor="#ff333333"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/text_appointment_time_end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_toLeftOf="@id/img_appointment_time_end"
                        android:background="@null"
                        android:enabled="false"
                        android:text="-"
                        android:textAlignment="center"
                        android:textSize="14sp" />


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/bg_color"></LinearLayout>

                <RelativeLayout
                    android:id="@+id/btn_appointment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/img_appointment"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:scaleType="centerInside"
                        android:src="@mipmap/right"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true" />

                    <!--预约结果-->
                    <TextView

                        android:id="@+id/user_results_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="5dp"

                        android:text="预约结果"
                        android:textColor="#ff333333"
                        android:textSize="14sp" />

                    <TextView

                        android:id="@+id/text_results"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/img_appointment"
                        android:layout_marginRight="5dp"
                        android:layout_toStartOf="@+id/img_appointment"
                        android:background="@null"
                        android:enabled="false"
                        android:text="-"
                        android:textAlignment="center"
                        android:textSize="14sp" />

                    <!--<TextView-->

                    <!--android:id="@+id/text_results"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_alignBottom="@+id/appointment_results_btn"-->
                    <!--android:layout_marginEnd="11dp"-->
                    <!--android:layout_marginRight="10dp"-->
                    <!--android:layout_toStartOf="@+id/appointment_results_btn"-->
                    <!--android:text="" />-->


                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/id_layout_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/bg_color"></LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10dp">


                        <ImageView
                            android:id="@+id/btn_remind_time"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:scaleType="centerInside"
                            android:src="@mipmap/right"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true" />

                        <TextView


                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/btn_remind_time"
                            android:layout_alignParentStart="true"
                            android:text="提醒时间"
                            android:textColor="#ff333333"
                            android:textSize="14sp" />

                        <EditText

                            android:id="@+id/text_remind_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/btn_remind_time"
                            android:layout_marginRight="5dp"
                            android:layout_toStartOf="@+id/btn_remind_time"
                            android:background="@null"
                            android:enabled="false"
                            android:text="-"
                            android:textSize="@dimen/dimen_14sp" />


                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/bg_color"></LinearLayout>

                    <RelativeLayout
                        android:id="@+id/layout_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10dp">


                        <TextView


                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginTop="5dp"

                            android:text="提醒间隔"
                            android:textColor="#ff333333"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:text="分钟" />

                        <EditText

                            android:id="@+id/text_remind_interval_time"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"

                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_toStartOf="@+id/time"
                            android:background="@null"
                            android:enabled="false"
                            android:textAlignment="center"
                            android:textSize="14sp" />
                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/bg_color"></LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/bg_color"></LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_training_plan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <!--android:visibility="gone"-->
                    <!--训练计划-->
                    <RelativeLayout
                        android:id="@+id/btn_training_plan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:padding="10dp">


                        <TextView
                            android:id="@+id/training_plan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="训练计划"

                            android:textColor="#ff333333"
                            android:textSize="14sp" />

                        <ImageView
                            android:id="@+id/training_plan_img"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:scaleType="centerInside"
                            android:src="@mipmap/right"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true" />


                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/text_training_plan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_40dp"
                            android:layout_marginRight="@dimen/dimen_40dp"
                            android:lines="6" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/bg_color"

                        android:lineSpacingExtra="10dp"></LinearLayout>
                </LinearLayout>
                <!--备注-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp">


                    <TextView
                        android:id="@+id/details_note_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"

                        android:text="备注"
                        android:textColor="#ff333333"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/text_details_note"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/left_spacing"
                        android:layout_toRightOf="@id/details_note_text"
                        android:background="@null"
                        android:gravity="top"
                        android:hint=""
                        android:includeFontPadding="false"
                        android:minLines="3"
                        android:paddingTop="2dp"
                        android:textAlignment="inherit"
                        android:textSize="@dimen/dimen_12sp" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:background="@color/bg_color"></LinearLayout>


            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerviewid"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>


    </ScrollView>


    <!--</android.support.v4.widget.SwipeRefreshLayout>-->
</RelativeLayout>

</RelativeLayout>
