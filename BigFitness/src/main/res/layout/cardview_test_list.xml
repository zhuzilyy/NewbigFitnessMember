<?xml version="1.0" encoding="utf-8"?>
<com.member.gufei.bigfitness.util.NgCommon.view.SlidingButtonView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@android:color/white"
    android:layout_marginBottom="1dp"

   >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <!--<TextView-->
        <!--android:id="@+id/tv_delete"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_width="80dp"-->
        <!--android:gravity="center"-->
        <!--android:layout_toRightOf="@+id/layout_content"-->
        <!--android:text="删 除"-->
        <!--android:background="@drawable/btn_click_red_havebackground"-->
        <!--android:textColor="#DDFFFFFF"-->
        <!--/>-->
        <LinearLayout
            android:background="#ffffff"
            android:orientation="horizontal"
            android:id="@+id/layout_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/rl_left"
                android:layout_width="50dp"
                android:layout_height="match_parent">
                <RadioButton
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/rbtn"
                    android:layout_width="50dp"
                    android:layout_height="match_parent" />
            </RelativeLayout>

            <TextView
                android:gravity="center"
                android:id="@+id/text"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:textSize="50dp"
                android:textColor="#DD000000"
                android:background="@drawable/btn_click_black_havebackground"
                />

            <android.support.v7.widget.CardView
                android:id="@+id/id_front"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:padding="5dp"
                >
                <ImageView
                    android:id="@+id/delete_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00FFFFFF"
                    android:visibility="gone"
                    android:src="@mipmap/msg"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/share_view"
                    android:layout_weight="1"


                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView

                            android:id="@+id/head_img"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@mipmap/head_img" />

                        <TextView
                            android:id="@+id/id_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignBaseline="@id/head_img"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/dimen_12dp"
                            android:text="-" />

                        <TextView
                            android:id="@+id/id_time"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignBaseline="@id/head_img"
                            android:layout_marginRight="@dimen/dimen_8dp"
                            android:gravity="center_vertical|right"
                            android:paddingLeft="@dimen/dimen_12dp"
                            android:text="2017/4/11 23:59:59" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/id_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_8dp"
                            android:layout_marginLeft="@dimen/dimen_4dp"
                            android:gravity="center_vertical"
                            android:text="预约：这其实就一个预约" />


                        <TextView

                            android:id="@+id/hint_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/dimen_8dp"
                            android:background="@drawable/shape_comer"
                            android:gravity="center"
                            android:text="99+" />

                    </RelativeLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

    </RelativeLayout>

</com.member.gufei.bigfitness.util.NgCommon.view.SlidingButtonView>