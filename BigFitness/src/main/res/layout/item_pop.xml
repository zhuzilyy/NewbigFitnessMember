<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/selected_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/test1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/left_spacing"
            android:gravity="center"
            android:text="Small Text"
            android:textAlignment="center"
            android:textColor="@color/all_back_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/up_btn"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"
                android:scaleType="fitEnd"
                android:src="@mipmap/screening_up" />

            <ImageView
                android:id="@+id/down_btn"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_gravity="top"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:scaleType="fitEnd"
                android:src="@mipmap/screening_down" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightblack" ></LinearLayout>
</LinearLayout>