<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:layout_weight="1"
    android:padding="1dp"
    app:cardElevation="5dp"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView

                android:id="@+id/head_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
              android:layout_margin="5dp"
                android:src="@mipmap/head_img" />

            <TextView
                android:id="@+id/id_class_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignBaseline="@id/head_img"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen_12dp"
                android:text="私教课预约"
                android:textColor="@color/green_btn"/>

            <TextView
                android:id="@+id/id_user_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignBaseline="@id/head_img"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen_12dp"
                android:text="-" />

            <TextView
                android:id="@+id/id_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBaseline="@id/head_img"
                android:layout_marginRight="@dimen/dimen_8dp"
                android:gravity="center_vertical|right"
                android:paddingLeft="@dimen/dimen_12dp"
                android:text="2017/4/11 23:59:59" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/id_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:layout_marginLeft="@dimen/dimen_4dp"
                android:gravity="center_vertical"
                android:lineSpacingExtra="2dp"
                android:lineSpacingMultiplier="1.2"
                android:text="课程：减脂\n预约开始时间：20170411 15：10\n预约开始时间：20170411 16：10\n预约结果:" />


            <TextView
                android:id="@+id/hint_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dimen_8dp"
                android:background="@drawable/shape_comer"
                android:gravity="center"
                android:text="99+" />

        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>