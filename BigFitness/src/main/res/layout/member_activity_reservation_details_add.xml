<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A2541"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/main_head_layout"
        android:layout_width="match_parent"
        android:layout_height="84px"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">


        <TextView
            android:id="@+id/main_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:layout_toRightOf="@+id/btn_back"
            android:gravity="center|left"

            android:text="添加预约"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_14sp" />

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="80px"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10px"
            android:padding="10px"
            android:src="@mipmap/lefttool" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/member_text_color"></LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60px"
            android:layout_alignParentLeft="true"
            android:layout_margin="@dimen/album_dp_10"
            android:gravity="left|center"

            android:paddingLeft="6px"
            android:text="课程名称"
            android:textColor="@color/member_text_color" />

        <TextView
            android:id="@+id/text_name_lesson"
            android:layout_width="wrap_content"
            android:layout_height="60px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50px"
            android:layout_marginTop="@dimen/album_dp_10"
            android:gravity="left|center"

            android:paddingLeft="6px"
            android:text="增肌"
            android:textColor="@color/white" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60px"
            android:layout_alignParentLeft="true"
            android:layout_margin="@dimen/album_dp_10"
            android:gravity="left|center"

            android:paddingLeft="6px"
            android:text="上课教练"
            android:textColor="@color/member_text_color" />


        <TextView
            android:id="@+id/text_name_coach"
            android:layout_width="wrap_content"
            android:layout_height="60px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50px"
            android:layout_marginTop="@dimen/album_dp_10"
            android:layout_toLeftOf="@+id/img_lesson_cocat"
            android:gravity="left|center"

            android:paddingLeft="6px"
            android:text="丽丽"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/img_lesson_cocat"
            android:layout_width="@dimen/album_dp_10"
            android:layout_height="@dimen/dimen_30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20px"
            android:layout_marginTop="@dimen/album_dp_10"
            android:src="@mipmap/right"
            android:visibility="invisible" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_time_begin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60px"
            android:layout_alignParentLeft="true"
            android:layout_margin="@dimen/album_dp_10"
            android:gravity="left|center"

            android:paddingLeft="6px"
            android:text="开始时间"
            android:textColor="@color/member_text_color" />


        <TextView
            android:id="@+id/text_time_begin"
            android:layout_width="wrap_content"
            android:layout_height="60px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50px"
            android:layout_marginTop="@dimen/album_dp_10"
            android:gravity="left|center"
            android:paddingLeft="6px"
            android:text="请选择"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/img_begin_right"
            android:layout_width="@dimen/album_dp_10"
            android:layout_height="@dimen/dimen_30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20px"
            android:layout_marginTop="@dimen/album_dp_10"
            android:src="@mipmap/right" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_time_end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60px"
            android:layout_alignParentLeft="true"
            android:layout_margin="@dimen/album_dp_10"
            android:gravity="left|center"

            android:paddingLeft="6px"
            android:text="结束时间"
            android:textColor="@color/member_text_color" />

        <TextView
            android:id="@+id/text_time_end"
            android:layout_width="wrap_content"
            android:layout_height="60px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50px"
            android:layout_marginTop="@dimen/album_dp_10"
            android:gravity="left|center"

            android:paddingLeft="6px"
            android:text=""
            android:textColor="@color/white" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_remind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:id="@+id/text_remind_right"
            android:layout_width="wrap_content"
            android:layout_height="60px"
            android:layout_alignParentLeft="true"
            android:layout_margin="@dimen/album_dp_10"
            android:gravity="left|center"

            android:paddingLeft="6px"
            android:text="提醒时间 "
            android:textColor="@color/member_text_color" />


        <TextView
            android:id="@+id/text_date_remind"
            android:layout_width="wrap_content"
            android:layout_height="60px"

            android:layout_marginRight="50px"
            android:layout_marginTop="@dimen/album_dp_10"
            android:layout_toRightOf="@+id/text_remind_right"
            android:gravity="left|center"

            android:paddingLeft="6px"
            android:text=""
            android:textColor="@color/white" />


        <TextView
            android:id="@+id/text_time_remind"
            android:layout_width="wrap_content"
            android:layout_height="60px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50px"
            android:layout_marginTop="@dimen/album_dp_10"
            android:gravity="left|center"
            android:paddingLeft="6px"
            android:text="请选择"
            android:textColor="@color/white" />

        <!--<ImageView-->
            <!--android:id="@+id/img_remind_right"-->
            <!--android:layout_width="@dimen/album_dp_10"-->
            <!--android:layout_height="@dimen/dimen_30dp"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_marginRight="20px"-->
            <!--android:layout_marginTop="@dimen/album_dp_10"-->
            <!--android:src="@mipmap/right" />-->


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60px"
            android:layout_alignParentLeft="true"
            android:layout_margin="@dimen/album_dp_10"
            android:gravity="left|center"

            android:paddingLeft="6px"
            android:text="提醒间隔 每隔"
            android:textColor="@color/member_text_color" />


        <EditText
            android:id="@+id/edit_interval"
            android:layout_width="80px"
            android:layout_height="60px"
            android:layout_marginTop="@dimen/album_dp_10"
            android:layout_toLeftOf="@+id/text_unit_right"
            android:background="@null"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_14dp" />

        <TextView
            android:id="@+id/text_unit_right"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20px"
            android:layout_marginTop="@dimen/album_dp_10"
            android:gravity="left|center"
            android:text="分钟"
            android:textColor="@color/member_text_color" />


    </RelativeLayout>

    <EditText
        android:id="@+id/text_note"
        android:layout_width="match_parent"
        android:layout_height="300px"
        android:layout_margin="30px"
        android:background="@color/member_view_bg_color"
        android:gravity="left"
        android:hint="填写备注信息（可不填）"
        android:padding="@dimen/album_dp_10"
        android:textColor="@color/member_text_color"
        android:textColorHint="@color/member_text_color"
        android:textSize="@dimen/dimen_14dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="84px"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dimen_20dp"
        android:layout_marginLeft="@dimen/dimen_60dp"
        android:layout_marginRight="@dimen/dimen_60dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        >

        <ImageView
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:src="@mipmap/img_btn_complete_selected" />

    </LinearLayout>

</LinearLayout>
