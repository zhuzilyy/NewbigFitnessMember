<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_weight="1"
    android:background="@color/member_bg_color"
    android:layout_marginBottom="@dimen/album_dp_10"
    android:layout_marginLeft="@dimen/album_dp_10"
    android:layout_marginRight="@dimen/album_dp_10"
    >


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >


        <ImageView
            android:id="@+id/img_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:layout_marginLeft="@dimen/dimen_30dp"
               android:layout_marginTop="5dp"
                android:text="热瑜伽课程(8人班)"
                android:textColor="#ffffffff"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_alignParentBottom="true">
            <TextView
                android:id="@+id/text_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥600"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:textSize="@dimen/dimen_20dp"
                android:textColor="@color/green_btn"/>
            <TextView
                android:id="@+id/text_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/10节"
                android:textColor="@color/white"
                />

        </LinearLayout>
        <ImageView

            android:id="@+id/img_type"
            android:layout_width="60dp"
            android:layout_height="@dimen/dimen_40dp"
            android:padding="5dp"
            android:src="@mipmap/is_bug"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>
</android.support.v7.widget.CardView>
