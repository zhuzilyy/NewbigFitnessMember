<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/member_bg_color">
        <RelativeLayout
            android:id="@+id/btn_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/layout_bottom"
            android:layout_margin="10dp"
            android:background="@color/member_view_bg_color">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_20dp"
                android:background="@color/member_view_bg_color"
                android:orientation="vertical"
                android:weightSum="4">

                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/text_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:text="预约类型: 续费预约"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/text_result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:text="预约结果: 成功"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/text_personnel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:text="预约人员: 会籍经理 井木然"
                    android:textColor="@color/white" />
                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/text_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:text="预约时间: : 2017/11/27 15：00-16：00"
                    android:textColor="@color/white" />
            </LinearLayout>

        </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/member_bg_color">
        <LinearLayout
            android:id="@+id/layout_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="right"
            android:weightSum="4">

            <TextView
                android:id="@+id/btn_submit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_type_selected_shape"
                android:gravity="center"
                android:padding="3dp"
                android:text="确定预约"
                android:textColor="@color/member_text_color" />

            <TextView
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_type_shape"
                android:gravity="center"
                android:padding="3dp"
                android:text="取消预约"
                android:textColor="@color/member_text_color" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>