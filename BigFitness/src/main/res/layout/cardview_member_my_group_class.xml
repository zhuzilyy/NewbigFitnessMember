<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_margin="10dp"
    android:layout_weight="1"
    android:background="@color/member_bg_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/member_bg_color">

        <LinearLayout
            android:id="@+id/layout_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3">

            </LinearLayout>

            <TextView
                android:id="@+id/btn4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_type_shape"
                android:gravity="center"
                android:padding="3dp"
                android:text="评价"
                android:textColor="@color/member_text_color" />
        </LinearLayout>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/layout_bottom"
            >
<ImageView
    android:id="@+id/img_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:src="@mipmap/img_card_year"
    android:scaleType="fitXY"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="@dimen/dimen_30dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="肩背塑形进阶课程 (5人班)"
                    android:textColor="#ffffffff"
                    android:textSize="18dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/text_type"
                android:layout_width="60dp"
                android:layout_height="@dimen/dimen_40dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:text="未开课"
                android:textColor="@color/green_btn" />

            <TextView
                android:id="@+id/text_money"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_40dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dimen_30dp"
                android:padding="5dp"
                android:text="¥600"
                android:gravity="right"
                android:lines="1"
                android:textColor="@color/green_btn"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/text_number"
                android:layout_width="60dp"
                android:layout_height="@dimen/dimen_40dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/text_money"
                android:padding="5dp"
                android:text="/10节"
                android:gravity="left|center"
                android:textColor="@color/white"
                android:textSize="12dp" />

        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
