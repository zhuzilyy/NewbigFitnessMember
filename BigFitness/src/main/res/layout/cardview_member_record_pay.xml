<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_weight="1"
    android:background="@color/member_bg_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/member_bg_color">


        <LinearLayout
            android:id="@+id/img_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/layout_bottom"
            android:layout_margin="10dp"
            android:background="@color/member_view_bg_color"
            android:orientation="vertical"
            android:weightSum="5">

            <TextView
                android:id="@+id/text_type_pay"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="消费类型: 私教课购买"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/text_type_card"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="会员卡类型: 年卡"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/text_money_pay"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="消费金额: 3000元"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/text_id_order"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="订单编号:2017000000"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/text_time_pay"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="消费时间: 2017/11/27 15：00"
                android:textColor="@color/white" />


        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
