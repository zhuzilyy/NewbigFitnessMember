<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    android:layout_weight="1"
    android:background="@color/member_bg_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/member_bg_color">

        <LinearLayout
            android:id="@+id/layout_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_30dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="1dp"
            android:gravity="right"
            android:weightSum="4">

            <TextView
                android:id="@+id/btn_submit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dimen_5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_type_selected_shape"
                android:gravity="center"
                android:padding="3dp"
                android:text="确定预约"
                android:textColor="@color/member_text_color" />

            <TextView
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_weight="1"
                android:background="@drawable/btn_type_shape"
                android:gravity="center"
                android:padding="3dp"
                android:text="取消预约"
                android:textColor="@color/member_text_color" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/btn_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/layout_bottom"
            android:layout_margin="1dp"
            android:background="@color/member_view_bg_color">
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dimen_20dp"
                android:background="@color/member_view_bg_color"
                android:orientation="vertical"
                android:weightSum="4">

                <TextView
                    android:id="@+id/text_status"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="预约状态: 会员已取消"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/text_name_lesson"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="课程名称: 减脂"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/text_name_coach"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="上课教练: 高恒"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/text_time"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="预约时间: : 2017/11/27 15：00-16：00"
                    android:textColor="@color/white" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="@dimen/dimen_40dp"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:weightSum="3.5">

                <!--<TextView-->
                <!--android:id="@+id/text_sponsor"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="40dp"-->
                <!--android:layout_weight="1"-->
                <!--android:gravity="center"-->
                <!--android:text="教"-->
                <!--android:textColor="@color/member_text_color" />-->

                <ImageView
                    android:id="@+id/img_course"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:src="@mipmap/img_ptoc" />

                <!--<TextView-->
                <!--android:id="@+id/text_receive"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="40dp"-->
                <!--android:layout_weight="1"-->
                <!--android:gravity="center"-->
                <!--android:text="会"-->
                <!--android:textColor="@color/member_text_color" />-->


            </LinearLayout>

            <ImageView
                android:id="@+id/img_left"
                android:layout_width="@dimen/dimen_40dp"
                android:layout_height="@dimen/dimen_40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@mipmap/img_left_lesson" />

        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>
