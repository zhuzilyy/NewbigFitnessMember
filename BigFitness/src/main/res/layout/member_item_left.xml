<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:src="@mipmap/item_left_bg"
    android:scaleType="fitXY"/>
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_30dp"
        android:src="@mipmap/back"
          android:layout_margin="20px"
         android:layout_alignParentRight="true"
        />
</RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/img_user"
            android:layout_width="120px"
            android:layout_height="120px"
            android:layout_gravity="center"
            android:src="@mipmap/user_head_img"
            app:riv_border_color="@color/green_btn"
            app:riv_border_width="5dp"
            app:riv_oval="true"
            />

        <!--<ImageView-->
            <!--android:id="@+id/img_user"-->
            <!--android:layout_width="120px"-->
            <!--android:layout_height="120px"-->
            <!--android:src="@mipmap/user_head_img"-->

            <!--android:layout_gravity="center"/>-->
        <TextView
            android:id="@+id/text_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="V5 "
            android:gravity="center"
           android:layout_marginTop="20dp"
            android:textSize="@dimen/dimen_18dp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/text_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="用户名:123456"
            android:gravity="center"
            android:textSize="28px"
            android:layout_marginTop="10px"
            android:textColor="@color/white"/>
    </LinearLayout>

<RelativeLayout
    android:id="@+id/btn_message"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_60dp"
    android:layout_marginTop="@dimen/dimen_30dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2A314B"
        android:alpha="0.5"></LinearLayout>
<ImageView
    android:id="@+id/mail_img"
    android:layout_width="@dimen/dimen_40dp"
    android:layout_height="@dimen/dimen_40dp"
    android:padding="10px"
    android:src="@mipmap/mail_btn"
    android:layout_alignParentLeft="true"
    android:layout_margin="20px"/>
<TextView
    android:layout_width="match_parent"
    android:layout_height="120px"
    android:layout_toRightOf="@+id/mail_img"
    android:text="通知"
    android:gravity="center|left"
    android:layout_marginLeft="@dimen/dimen_20dp"
    android:textColor="@color/white"
    android:textSize="28px"/>
</RelativeLayout>
<RelativeLayout
    android:id="@+id/btn_set"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_60dp"
    android:layout_marginTop="@dimen/dimen_30dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2A314B"
        android:alpha="0.5"></LinearLayout>
<ImageView
    android:id="@+id/set_img"
    android:layout_width="@dimen/dimen_40dp"
    android:layout_height="@dimen/dimen_40dp"
    android:padding="10px"
    android:src="@mipmap/set_btn"
    android:layout_alignParentLeft="true"
    android:layout_margin="20px"/>
<TextView
    android:layout_width="match_parent"
    android:layout_height="120px"
    android:layout_toRightOf="@+id/set_img"
    android:text="设置"
    android:gravity="center|left"
    android:layout_marginLeft="@dimen/dimen_20dp"
    android:textColor="@color/white"
    android:textSize="28px"/>
</RelativeLayout>



</LinearLayout>
</RelativeLayout>