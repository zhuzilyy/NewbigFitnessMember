<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_address_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/user_info_bg"
    android:orientation="vertical"
    >
    <!--tools:context="com.member.gufei.bigfitness.com.GuFei.Ui.AddressList.AddressDetails.AddressDetailsActivity"-->

    <include layout="@layout/view_toolbar_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|bottom"
                android:orientation="vertical"
                android:text="您的身高？"
                android:textColor="#ffffffff"
                android:textSize="40px" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|top"
                android:paddingTop="10px">

                <EditText
                    android:id="@+id/edit_height"
                    android:layout_width="200px"
                    android:layout_height="wrap_content"
                    android:gravity="center|top"
                    android:hint="请填写身高"
                    android:textColor="@color/white"
                    android:textColorHint="#969CAC"
                    android:textSize="36px"
                    android:clickable="true"
                    android:focusable="false"/>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|bottom"
                android:orientation="vertical"
                android:text="您的体重？"
                android:textColor="#ffffffff"
                android:textSize="40px" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|top"
                android:paddingTop="10px">

                <EditText
                    android:id="@+id/edit_weight"
                    android:layout_width="200px"
                    android:layout_height="wrap_content"
                    android:gravity="center|top"
                    android:hint="请填写体重"
                    android:textColor="@color/white"
                    android:textColorHint="#969CAC"
                    android:textSize="36px"
                    android:clickable="true"
                    android:focusable="false"/>
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingBottom="40px"
        android:paddingLeft="@dimen/dimen_40dp"
        android:paddingRight="@dimen/dimen_40dp"
        android:paddingTop="40px">

        <ImageView
            android:id="@+id/btn_next"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/img_btn_next_select"
            android:gravity="center"
            android:maxHeight="@dimen/dimen_40dp"

            android:textColor="#626778"
            android:textSize="@dimen/dimen_24sp" />

    </LinearLayout>

</LinearLayout>
