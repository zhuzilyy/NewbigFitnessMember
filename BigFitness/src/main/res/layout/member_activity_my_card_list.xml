<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/toolbar_background"
    android:orientation="vertical"
    >




    <include   layout="@layout/view_toolbar_main" />


    <android.support.design.widget.TabLayout
        android:id="@+id/tab_main"
        android:layout_width="match_parent"
        android:layout_height="100px"


        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:background="@color/member_bg_color"

        android:fillViewport="true"
        app:tabBackground="@null"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/green_btn"
        app:tabIndicatorHeight="6px"
        app:tabMode="fixed"
        app:tabPaddingEnd="0dp"
        app:tabPaddingStart="0dp"
        app:tabSelectedTextColor="@color/green_btn"
        app:tabTextColor="@color/member_text_color" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tab_main"
        android:layout_marginBottom="@dimen/dimen_20dp"
        android:layout_weight="1" />

</LinearLayout>