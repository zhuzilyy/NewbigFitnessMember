<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_marginBottom="@dimen/album_dp_10"
    android:layout_marginLeft="@dimen/album_dp_10"
    android:layout_marginRight="@dimen/album_dp_10"
    android:layout_weight="1"
    android:background="@color/member_bg_color">


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/img_bg_list" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_30dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="普拉提"
                android:textColor="#ffffffff"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/text_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_30dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="朱XX 18:00-19:50"
                android:textColor="#ffffffff"
                android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dimen_20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/album_dp_10">

            <TextView
                android:id="@+id/text_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:text="20"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_20dp" />

            <TextView
                android:id="@+id/text_number_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/20"


                android:textColor="@color/green_btn" />

        </LinearLayout>

        <ImageView
            android:id="@+id/img_type"
            android:layout_width="60dp"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/album_dp_10"
            android:padding="5dp"
            android:src="@mipmap/img_appointed" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
