<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_weight="1"
    android:layout_margin="5dp"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/member_view_bg_color"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/text_push_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="2017/11/24 10:38"
                android:textColor="@color/member_text_color"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/text_push_name"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/dimen_30dp"
                android:layout_weight="1"
                android:gravity="left|center"
                android:text="会员卡购买成功"
                android:textColor="#ffffffff"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_push_red"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/text_push_name"
                android:background="@drawable/text_round_rect" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_push_cotent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_30dp"
                android:layout_weight="1"
                android:gravity="left|center"
                android:text="您的会员卡-2年卡已激活成功!"
                android:textColor="#ffffffff"
                android:textSize="14dp" />



        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>
