<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_marginBottom="@dimen/album_dp_10"
    android:layout_marginLeft="@dimen/album_dp_10"
    android:layout_marginRight="@dimen/album_dp_10"
    android:layout_weight="1"
    android:background="@color/member_bg_color">


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/img_recommend"
            android:layout_width="@dimen/dimen_40dp"
            android:layout_height="@dimen/dimen_40dp"

            android:src="@mipmap/recommended" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_30dp"
                android:layout_marginTop="@dimen/dimen_30dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="减肥初级训练课程"
                android:textColor="#ffffffff"
                android:textSize="20dp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/img_type"
            android:layout_width="60dp"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_alignParentRight="true"
            android:padding="5dp"
            android:src="@mipmap/is_bug" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
