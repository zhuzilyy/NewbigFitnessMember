<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:layout_margin="10dp"
    android:layout_weight="1"
    android:background="@color/member_bg_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/member_bg_color">

        <LinearLayout
            android:id="@+id/layout_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="5dp"
            android:gravity="right"
            android:weightSum="4">


            <TextView
                android:id="@+id/btn4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_type_shape"
                android:gravity="center"
                android:padding="3dp"
                android:text="取消预约"
                android:textColor="@color/member_text_color" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/layout_bottom"
            android:layout_margin="10dp"
            android:background="@color/member_view_bg_color">


            <LinearLayout
                android:id="@+id/img_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dimen_20dp"
                android:background="@color/member_view_bg_color"
                android:orientation="vertical"
                android:weightSum="4">

                <TextView
                    android:id="@+id/text_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="预约状态: 会员已取消"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/text_name_lesson"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="课程名称: 减脂"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/text_name_coach"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="上课教练: 高恒"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/text_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="预约时间: : 2017/11/27 15：00-16：00"
                    android:textColor="@color/white" />


            </LinearLayout>

            <TextView
                android:gravity="center"
                android:textColor="@color/white"
                android:id="@+id/tv_num"
                android:layout_width="22dp"
                android:layout_height="@dimen/dimen_20dp"
                android:layout_alignEnd="@+id/img_bg"
                android:layout_alignTop="@+id/img_bg"
                android:background="@drawable/radio_text" />
        </RelativeLayout>


    </RelativeLayout>
</android.support.v7.widget.CardView>
