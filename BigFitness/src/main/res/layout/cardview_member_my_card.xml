<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="@dimen/album_dp_10"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/member_bg_color">

        <LinearLayout
            android:id="@+id/layout_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="5dp"
            android:gravity="right"
            android:weightSum="4"
            >


            <TextView
                android:id="@+id/btn1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_type_shape"
                android:gravity="center"
                android:padding="3dp"
                android:text="升级"
                android:textColor="@color/member_text_color" />

            <TextView
                android:id="@+id/btn2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_type_shape"
                android:gravity="center"
                android:padding="3dp"
                android:text="冻结"
                android:textColor="@color/member_text_color" />

            <TextView
                android:id="@+id/btn3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_type_shape"
                android:gravity="center"
                android:padding="3dp"
                android:text="续费"
                android:textColor="@color/member_text_color" />

            <TextView
                android:id="@+id/btn4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_type_shape"
                android:gravity="center"
                android:padding="3dp"
                android:text="评价"

                android:textColor="@color/member_text_color" />
            <TextView
                android:id="@+id/btn5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_type_shape"
                android:gravity="center"
                android:padding="3dp"
                android:text="退款"
                android:visibility="gone"
                android:textColor="@color/member_text_color" />
            <!--<TextView-->
                <!--android:id="@+id/btn6"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_margin="5dp"-->
                <!--android:layout_weight="1"-->
                <!--android:background="@drawable/btn_type_shape"-->
                <!--android:gravity="center"-->
                <!--android:padding="3dp"-->
                <!--android:text="冻结催办"-->
               <!---->
                <!--android:textColor="@color/member_text_color" />-->
        </LinearLayout>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/layout_bottom"
            android:background="@color/member_bg_color">

            <ImageView
                android:id="@+id/img_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/img_bg_list" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_30dp"
                    android:layout_marginLeft="@dimen/dimen_30dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text=""
                    android:textColor="#ffffffff"
                    android:textSize="20dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/text_type"
                android:layout_width="80dp"
                android:layout_height="@dimen/dimen_40dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:text="已认证"
                android:textColor="@color/green_btn" />


        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
